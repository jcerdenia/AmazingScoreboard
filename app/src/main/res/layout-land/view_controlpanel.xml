<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageButton
            android:id="@+id/addPlayers_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBackgroundMain"
            app:layout_constraintBottom_toTopOf="@+id/shuffle_button"
            app:layout_constraintEnd_toEndOf="@+id/shuffle_button"
            app:layout_constraintStart_toStartOf="@+id/shuffle_button"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_num_of_players" />

        <ImageButton
            android:id="@+id/shuffle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorBackgroundMain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_swap" />

        <ImageButton
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:backgroundTint="@color/colorBackgroundMain"
            android:contentDescription="@string/reset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/shuffle_button"
            app:layout_constraintTop_toBottomOf="@+id/shuffle_button"
            app:srcCompat="@drawable/ic_reset" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>